@model MVCEventCalendar.Event

@{
    ViewBag.Title = "Ukupna zarada radnika po mjesecu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.BeginForm("StatisticsDatePerMonthWorker", "Home")
<br /><br />
      <div class="form-horizontal">

          <h2>Ukupna zarada radnika po mjesecu</h2>
          <div class="form-group">


              <div class="col-md">
                  @Html.Label("Od:")


                  @Html.TextBox("start", null, new { @type = "date", @class = "form-contol datepicker" })
                  @Html.Label("do:")

                  @Html.TextBox("end", null, new { @type = "date", @class = "form-contol datepicker" })
                  <br />
                  @Html.Label("Unesite ime radnika:")

                  @Html.EditorFor(model => model.Worker, new { htmlAttributes = new { @class = "form-control" } })


                  <p><button type="submit">Izracunaj</button></p>
                  <div>Zaradjeno= @Model.Price KM</div>
              </div>
          </div>
</div>